<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CarInventory">

        <LinearLayout
            android:id="@+id/action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_left_arrow_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:fontFamily="@font/segoebold"
                android:gravity="center_horizontal"
                android:text="Choose Car"
                android:textColor="@color/black"
                android:textSize="@dimen/_19sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/action"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_12sdp">

            <EditText
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:background="@drawable/ic_searchbar"
                android:drawableStart="@drawable/ic_search"
                android:drawableEnd="@drawable/ic_microphone"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/segoe"
                android:hint="Search Your Car"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:textColor="@color/grayy"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_500sdp"
            android:layout_below="@id/searchbar"
            android:layout_marginTop="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">


                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"

                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView

                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/bmw"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/bmw" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/porche"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/porche" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/audi"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/audi" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l1"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView

                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/kia"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/kia" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/lambo"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/lambo" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/ferrari"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ferrari" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l2"
                    android:layout_centerInParent="true"

                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView

                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/honda"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/honda" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/hyundai"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/hyundai" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/suzuki"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/suzuki" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l4"
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l3"
                    android:layout_centerInParent="true"

                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView

                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/volks"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/volks" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/volvo"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/volvo" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/mini"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/mini" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l5"
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l4"
                    android:layout_centerInParent="true"

                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView

                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/volks1"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/volks" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/volvo1"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/volvo" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/ServiceButton"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/mini1"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/mini" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>