<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/topBar"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@drawable/oilhorizontal"
            android:scaleType="fitXY"
            android:src="@drawable/ic_group_652" />

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/_15sdp"
            android:src="@drawable/ic_backbuttonwhite" />


        <ImageView
            android:id="@+id/settings"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_15sdp"
            android:src="@drawable/ic_adjustment__2_" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/backButton"

            android:orientation="vertical">

            <TextView
                android:id="@+id/grName"
                style="@style/profile_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:text="@string/saw_automobiles"
                android:textSize="@dimen/_20sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:src="@drawable/ic_location_pin" />


                <TextView
                    android:id="@+id/Location"
                    style="@style/location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/location"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:src="@drawable/ic_phonecall" />


                <TextView
                    android:id="@+id/contact2"
                    style="@style/location_text"
                    android:layout_width="@dimen/_210sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:text="+918530487927"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBar"
            android:layout_marginTop="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:alpha="0.7"
                    android:drawableLeft="@drawable/ic_group_597"
                    android:drawablePadding="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:text="@string/engine_oil_replacement"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:alpha="0.7"
                    android:drawableLeft="@drawable/ic_group_597"
                    android:drawablePadding="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:text="Oil Filter Replacement"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:alpha="0.7"
                    android:drawableLeft="@drawable/ic_group_597"
                    android:drawablePadding="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:text="Air Filter Replacement"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:alpha="0.7"
                    android:drawableLeft="@drawable/ic_group_597"
                    android:drawablePadding="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:text="Coolant Top up"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:alpha="0.7"
                    android:drawableLeft="@drawable/ic_group_597"
                    android:drawablePadding="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:text="Wiper Fluid Replacement"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:alpha="0.7"
                    android:drawableLeft="@drawable/ic_group_597"
                    android:drawablePadding="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:text="Battery Water Top up"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:alpha="0.7"
                    android:drawableLeft="@drawable/ic_group_597"
                    android:drawablePadding="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:text="Heater / Spark Plug Checking"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:alpha="0.7"
                    android:drawableLeft="@drawable/ic_group_597"
                    android:drawablePadding="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:text="Car wash"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:alpha="0.7"
                    android:drawableLeft="@drawable/ic_group_597"
                    android:drawablePadding="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:text="Interior Vacuuming"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/details"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/pickup"
                        style="@style/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text="Pick &amp; Drop" />

                    <Button
                        android:id="@+id/drop"
                        style="@style/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:text="Self Drop" />

                </RelativeLayout>

            </LinearLayout>


        </ScrollView>

        <RelativeLayout
            android:id="@+id/sureBoxRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/details"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="bottom">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:src="@drawable/ic_path_530" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/segoebold"
                android:paddingLeft="@dimen/_25sdp"
                android:text="@string/are_you_sure"
                android:textColor="@color/white"
                android:textSize="@dimen/_19sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_group_667" />

                <ImageView
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_group_668" />
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
</layout>