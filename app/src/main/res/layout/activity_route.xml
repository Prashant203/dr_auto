<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/topBar"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_145sdp"
            android:background="@drawable/oilhorizontal"
            android:scaleType="fitXY"
            android:src="@drawable/ic_group_652" />

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/_15sdp"
            android:src="@drawable/ic_backbuttonwhite" />


        <ImageView
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/ic_component_9___8" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/backButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_30sdp"
            android:orientation="vertical">

            <TextView
                style="@style/profile_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/saw_automobiles"
                android:textSize="@dimen/_20sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Location"
                    style="@style/location_text"
                    android:layout_width="@dimen/_210sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:paddingStart="@dimen/_2sdp"
                    android:text="@string/location"
                    android:textSize="@dimen/_13sdp" />

                <RatingBar
                    android:id="@+id/ratings"
                    style="@android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_below="@id/Location"
                    android:isIndicator="true"
                    android:max="5"
                    android:progressBackgroundTint="@color/gray"
                    android:progressTint="@color/white"
                    android:rating="3.7"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:theme="@style/RatingBar"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />

            </RelativeLayout>

        </LinearLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/topBar">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_5sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:clickable="true"
                    card_view:cardCornerRadius="@dimen/_10sdp"
                    card_view:cardElevation="@dimen/_50sdp"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/Locationmarker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:src="@drawable/ic_group_670" />

                    <TextView
                        style="@style/location_text"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:alpha="0.7"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/location"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:id="@+id/cancel"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="end|center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_group_669" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </FrameLayout>
    </RelativeLayout>
</layout>