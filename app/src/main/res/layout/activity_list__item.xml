<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:clickable="true"
    card_view:cardCornerRadius="@dimen/_10sdp"
    card_view:cardElevation="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <TextView
            android:id="@+id/grName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:alpha="0.5"
            android:fontFamily="@font/segoebold"
            android:paddingStart="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grName"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/segoe"
            android:paddingStart="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grName"
            android:layout_toEndOf="@id/address"
            android:fontFamily="@font/segoe"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/landmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grName"
            android:layout_toEndOf="@id/area"
            android:fontFamily="@font/segoe"
            android:paddingStart="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/pincode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grName"
            android:layout_toEndOf="@id/landmark"
            android:fontFamily="@font/segoe"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/contact1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pincode"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/segoe"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp"
            android:visibility="invisible" />

        <!--<TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/segoe"
            android:paddingLeft="@dimen/_15sdp"/>-->
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/grName"
            android:fontFamily="@font/segoe"
            android:gravity="bottom"
            android:paddingStart="@dimen/_2sdp"
            android:text="@string/car_service"
            android:textColor="@color/red"
            android:paddingTop="@dimen/_7sdp"
            android:textSize="@dimen/_10sdp" />
